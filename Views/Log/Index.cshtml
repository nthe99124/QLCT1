
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đăng nhập</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/Content/Image/logo_vuha.ico">
    <link rel="icon" type="image/png" href="~/Content/theme/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/Content/theme/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/theme/fonts/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/theme/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Content/theme/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/theme/plugins/select2/select2.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CustomCSS/Login/Login.css">
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Content/theme/images/img-01.png" alt="IMG">
                </div>

                <form class="login100-form validate-form" role="form" action="~/Log/Index" method="post">
                    <span class="login100-form-title">
                        Member Login
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" type="text" name="user" placeholder="Username">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="password" name="pass" placeholder="Password">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="submit">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>
                        <p style="color:red">@ViewBag.error</p>
                    </div>                    
                </form>
            </div>
        </div>
    </div>

    <script src="~/Content/theme/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script src="~/Content/theme/plugins/popper.js"></script>
    <script src="~/Content/theme/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/theme/plugins/select2/select2.min.js"></script>
    <script src="~/Content/theme/bootstrap/tilt/tilt.jquery.min.js"></script>
    <script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
    </script>
    <script src="~/Content/CustormJS/LoginJS/Login.js"></script>

</body>
</html>