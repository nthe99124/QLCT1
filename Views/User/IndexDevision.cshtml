
@{ 
    ViewBag.Title = "IndexDevision";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Quản lý đơn vị</title>
</head>
<body>
    <div class="container content" id="content-layout">
        <div class="title-header">
            <div class="title-grid">
                <div class="title-flexi-truncate">
                    <div class="title-media">
                        <div class="title-media__figure">
                            <div>
                                <div class="title-icon">
                                    <span>
                                        <img src="~/Content/CustomCSS/Image/contact_120.png" class="title-icon" alt="Contacts" title="Contacts">
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div>
                            <nav>
                                <ol class="title-ol">
                                    <li class="title-li">
                                        <span>Đơn vị</span>
                                    </li>
                                </ol>
                            </nav>
                            <div class="title-grid">
                                <div class="title-header__title">
                                    <div class="title-name">
                                        <div>
                                            <span>Quản lý đơn vị</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="data-content" style="display: flex; flex-direction: column">
            <div class="nav-tabs-custom">
                <div class="tab-content no-padding-top">
                    <div id="tab_15_1" class="tab-pane active">
                        <div class="box-body no-padding">
                            <div class="row">
                                <form action="~/User" class="form-horizontal form-row-seperated" method="post">
                                    <div class="col-md-12 padding-top-15">
                                        <div class="col-md-3">
                                            <input Class="form-control" data-val="true" data-val-maxlength="The field Username must be a string or array type with a maximum length of &#39;250&#39;." data-val-maxlength-max="250" data-val-required="Please enter user name" id="FilterOptions_Username" name="FilterOptions.Username" placeholder="Tên truy cập ..." type="text" value="" />
                                        </div>
                                        <div class="col-md-3">
                                            <input class="btn btn green btn-success" type="button" value="T&#236;m kiếm" id="btnSubmitSearch" />
                                        </div>
                                        <div class="col-md-6" style="display: flex; flex-direction: row; padding-left: 250px">
                                            <div class="page-toolbar">
                                                <div class="btn-group pull-right  ">
                                                    <a class="btn green btn-success margin-right-10" href="~/User/IndexUser">
                                                        Quản lý người dùng
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="page-toolbar">
                                                <div class="btn-group pull-right  ">
                                                    <button type="button" class="btn btn-primary btn green btn-success margin-right-10" data-toggle="modal" data-target="#exampleModal">
                                                        <i class="fa fa-plus"></i>
                                                        Th&#234;m mới
                                                    </button>
                                                </div>
                                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h4 class="modal-title" id="exampleModalLabel"><b>Thêm phòng ban</b></h4>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                Tên phòng ban: <input type="text" name="tenpb" />
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                                <button type="button" class="btn btn-primary">Save changes</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="content padding-top-30 no-padding-bottom">
                                <div class="table-wraper">
                                    <table class="table table-striped table-bordered table-hover fixed" id="userlist">
                                        <thead>
                                            <tr role="row" class="heading">
                                                <th class="col-stt">
                                                    #
                                                </th>
                                                <th>Tên đơn vị</th>
                                                <th>Số nhân viên</th>
                                                <th style="width:20%">Trưởng phòng</th>
                                                <th style="width:10%">H&#224;nh động</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @{ int dem = 0; }
                                            @foreach (var item in @ViewBag.list)
                                            {
                                <tr>
                                    <td class="col-stt">
                                        @(dem += 1)
                                    </td>
                                    <td>
                                        @item.NameDepart
                                    </td>
                                    <td>
                                        @item.NumberStaff
                                    </td>
                                    <td>
                                        <span id="admin_13" ct-type="admin" ct-user="13" class="set-role-user input-group-addon unlock-status">
                                            @item.NameUser (@item.IdUser)
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("UpdateDevision", "User", new {id = item.IdUser })"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                        <button onclick="isDelete()" style="margin-left: 10px"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                        <input type="hidden" name="" id="idin" value="@item.IdUser" size="30" />
                                    </td>
                                </tr>
}
                                        </tbody>
                                    </table>
                                </div>

                                <div class="row">
                                    <div class="col-md-5" style="margin-top: 190px;">
                                        <span>Hiển thị 1 - 20 / 330 bản ghi.</span>
                                    </div>
                                    <div class="col-md-7" id="pageDiv" style="margin-top: 160px;">
                                        <div class="dataTables_paginate paging_bootstrap_full_number" id="sample_1_paginate" style="text-align: right;">
                                            <ul class='pagination' style='visibility: visible;'><li class='active'><a>1</a></li><li><a onclick="PagerClick(2);">2</a></li><li><a onclick="PagerClick(3);">3</a></li><li><a onclick="PagerClick(4);">4</a></li><li><a onclick="PagerClick(5);">5</a></li><li class='next'><a title='Next' onclick="PagerClick(2);"><i class='fa fa-angle-right'></i></a></li><li class='next'><a title='Last' onclick="PagerClick(17);"><i class='fa fa-angle-double-right'></i></a></li></ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">

    function isDelete() {
        var inputVal = $('input').val()
        var inputid = document.getElementById("idin").value;
        var result = confirm("Bạn có chắc chắn muốn xoá không ?");
        var url = '/User/Delete/' + inputid;

        if (result) {

            window.location.href = url;
        }
    }

</script>