
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sửa sản phẩm</title>
</head>
<body>
    <div class="container content" id="content-layout">
        <link href="~/Content/CustomCSS/Accounts/Edit.css" rel="stylesheet" />
        <link href="~/Content/theme/plugins/DataTables/datatables.css" rel="stylesheet" />
        <form role="form" method="post" action="/Product/Update" enctype="multipart/form-data">
            <div class="title-header">
                <div class="title-grid">
                    <div class="title-flexi-truncate">
                        <div class="title-media">
                            <div class="title-media__figure">
                                <div>
                                    <div class="title-icon" style="background-color: #A094ED">
                                        <span>
                                            <img src="~/Content/CustomCSS/Image/contact_120.png" class="title-icon" alt="Contacts" title="Contacts">
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <nav>
                                    <ol class="title-ol">
                                        <li class="title-li">
                                            <span>Sản phẩm</span>
                                        </li>
                                    </ol>
                                </nav>
                                <div class="title-grid">
                                    <div class="title-header__title">
                                        <div class="title-name">
                                            <div>
                                                <span>Sửa sản phẩm</span>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="data-content row">
                <div class="col-md-9">
                    <div class="col-md-12">
                        <div class="general-infor margin-top-15">
                            <div class="col-md-12 infor-title">
                                Th&#244;ng tin sản phẩm
                            </div>
                            <div class="form-group col-md-6 padding-top-10">
                                <label class='col-md-4 control-label'>Mã sản phẩm</label><div class='col-md-8'><input type='text' value="@Model.Id" class='form-control ' name="Id" readonly /></div>
                            </div>
                            <div class="form-group col-md-6 padding-top-10">
                                <label class='col-md-4 control-label'>Tên sản phẩm</label><div class='col-md-8'><input type='text' value="@Model.Name" class='form-control ' name="Name" /></div>
                            </div>


                            <div class="form-group col-md-6 padding-top-10">
                                <label class='col-md-4 control-label'>SL còn</label><div class='col-md-8'><input type='text' value="@Model.NumberRemain" class='form-control ' name="NumberRemain" /></div>
                            </div>

                            <div class="form-group col-md-6 padding-top-10">
                                <label class='col-md-4 control-label'>Mô tả</label><div class='col-md-8'><input type='text' value="@Model.Description" class='form-control ' name="Description" /></div>
                            </div>

                            <div class="form-group col-md-6 padding-top-10">
                                <label class='col-md-4 control-label'>Giá</label><div class='col-md-8'><input type='text' value="@Model.Price" class='form-control input-icon  required' name="Price" /></div>
                            </div>
                            <div class="form-group col-md-6 padding-top-10">
                                <label class='col-md-4 control-label'>Giảm giá(%)</label><div class='col-md-8'><input type='text' value="@Model.Discount" class='form-control input-icon  required' name="Discount" /></div>
                            </div>
                            <div class="form-group col-md-6 padding-top-10">
                                <label class='col-md-4 control-label'>Đơn vị tính</label><div class='col-md-8'><input type='text' value="@Model.Unit" class='form-control input-icon  required' name="Unit" /></div>
                            </div>
                            <div class="form-group col-md-6 padding-top-10">
                                <label class='col-md-4 control-label'>Thời hạn bảo hành</label><div class='col-md-8'><input type='text' value="@Model.MonthOfGuarantee" class='form-control input-icon  required' name="MonthOfGuarantee" /></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 " style="padding-left: 200px">
                        <div class="margin-top-30">
                            <div class="col-md-3">
                            </div>
                            <div class="col-md-6 text-center">
                                <button type="submit" class="btn btn-success ">
                                    Sửa sản phẩm
                                </button>
                                <a href="~/Product/Index" class="btn grey-salt gray" type="button">
                                    <i></i> Hủy
                                </a>
                            </div>
                            <div class="col-md-3">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
