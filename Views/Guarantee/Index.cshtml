
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Bảo hành</title>
</head>
<body>
    <div class="container content" id="content-layout">
        <div class="title-header">
            <div class="title-grid">
                <div class="title-flexi-truncate">
                    <div class="title-media">
                        <div class="title-media__figure">
                            <div>
                                <div class="title-icon">
                                    <span>
                                        <img src="~/Content/CustomCSS/Image/contact_120.png" class="title-icon" alt="Contacts" title="Contacts">
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div>
                            <nav>
                                <ol class="title-ol">
                                    <li class="title-li">
                                        <span>Bảo hành</span>
                                    </li>
                                </ol>
                            </nav>
                            <div class="title-grid">
                                <div class="title-header__title">
                                    <div class="title-name">
                                        <div>
                                            <span>Bảo hành</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="data-content" style="display: flex; flex-direction: column">
                <div style="display: flex; flex-direction: row">
                    <div style="flex: 0.6">
                        <form method="post" action="~/Guarantee/Index">
                            <div style="display: flex; padding-top: 20px; padding-left: 30px">
                                <input style="width: 200px " type="text" name="key" placeholder="Gõ tìm kiếm">
                                <button type="submit" class="btn btn title-button title-button--neutral" style="margin-left: 10px">
                                    Tìm kiếm
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div style="padding-top: 20px">
                    <div style="padding-top: 20px">
                        <table id="example2" class="table table-bordered" style="background-color: white;">
                            <thead>
                                <tr align="center">
                                    <th class="sort_col_table" scope="col"> Mã bảo hành <i class="fa fa-exchange" aria-hidden="true"></i></th>
                                    <th class="sort_col_table" scope="col"> Mã hợp đồng <i class="fa fa-exchange" aria-hidden="true"></i></th>
                                    <th class="sort_col_table" scope="col"> Tên khách hàng  <i class="fa fa-exchange" aria-hidden="true"></i></th>
                                    <th class="sort_col_table" scope="col"> Tên sản phẩm  <i class="fa fa-exchange" aria-hidden="true"></i></th>
                                    <th class="sort_col_table" scope="col"> NV bảo hành <i class="fa fa-exchange" aria-hidden="true"></i></th>
                                    <th class="sort_col_table" scope="col"> File bảo hành <i class="fa fa-exchange" aria-hidden="true"></i></th>
                                    <th class="sort_col_table" scope="col"> Ngày BĐ BH <i class="fa fa-exchange" aria-hidden="true"></i></th>
                                    <th class="sort_col_table" scope="col"> Ngày BĐ HH <i class="fa fa-exchange" aria-hidden="true"></i></th>
                                    <th class="sort_col_table" scope="col"> Ghi chú <i class="fa fa-exchange" aria-hidden="true"></i></th>
                                </tr>
                                <tr align="center">
                                    <th style="width: 100px; border-color: black; padding-bottom: 10px" class="sort_col_table" scope="col">
                                        <input type="text" name="" id="search1" onkeyup="search1()">
                                        <i class="fa fa-search" aria-hidden="true" style="padding-top: 2px"></i>
                                    </th>
                                    <th style="width: 100px; border-color: black; padding-bottom: 10px" class="sort_col_table" scope="col">
                                        <input type="text" name="" id="search2" onkeyup="search2()">
                                        <i class="fa fa-search" aria-hidden="true" style="padding-top: 2px"></i>
                                    </th>
                                    <th style="width: 100px; border-color: black; padding-bottom: 10px" class="sort_col_table" scope="col">
                                        <input type="text" name="" id="search3" onkeyup="search3()">
                                        <i class="fa fa-search" aria-hidden="true" style="padding-top: 2px"></i>
                                    </th>
                                    <th style="width: 100px; border-color: black; padding-bottom: 10px" class="sort_col_table" scope="col">
                                        <input type="text" name="" id="search4" onkeyup="search4()">
                                        <i class="fa fa-search" aria-hidden="true" style="padding-top: 2px"></i>
                                    </th>
                                    <th style="width: 100px; border-color: black; padding-bottom: 10px" class="sort_col_table" scope="col">
                                        <input type="text" name="" id="search5" onkeyup="search5()">
                                        <i class="fa fa-search" aria-hidden="true" style="padding-top: 2px"></i>
                                    </th>
                                    <th style="width: 100px; border-color: black; padding-bottom: 10px" class="sort_col_table" scope="col">
                                        <input type="text" name="" id="search6" onkeyup="search6()">
                                        <i class="fa fa-search" aria-hidden="true" style="padding-top: 2px"></i>
                                    </th>
                                    <th style="width: 100px; border-color: black; padding-bottom: 10px" class="sort_col_table" scope="col">
                                        <input type="text" name="" id="search7" onkeyup="search7()">
                                        <i class="fa fa-search" aria-hidden="true" style="padding-top: 2px"></i>
                                    </th>
                                    <th style="width: 100px; border-color: black; padding-bottom: 10px" class="sort_col_table" scope="col">
                                        <input type="text" name="" id="search8" onkeyup="search8()">
                                        <i class="fa fa-search" aria-hidden="true" style="padding-top: 2px"></i>
                                    </th>
                                    <th style="width: 100px; border-color: black; padding-bottom: 10px" class="sort_col_table" scope="col">
                                        <input type="text" name="" id="search9" onkeyup="search9()">
                                        <i class="fa fa-search" aria-hidden="true" style="padding-top: 2px"></i>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    string EndDate = null;

                                }
                                @foreach (var item in Model)
                                {
                                    string StartDate = item.Date.ToString("dd/MM/yy");
                                    EndDate = Convert.ToDateTime(StartDate).AddMonths(item.MonthOfGuarantee).ToString("dd/MM/yy");
                                    <tr class="odd gradex" align="center">
                                        <td>@item.IdGuarantee</td>
                                        <td>@item.IdBill</td>
                                        <td>@item.NameCus</td>
                                        <td>@item.NameProduct</td>
                                        <td>@item.IdStaffGuarantee</td>
                                        <td><a href="@Url.Action("ShowGuarantee", "Guarantee", new {id = item.IdGuarantee })">@item.UrlGuarantee</td>
                                        <td>@StartDate</td>
                                        <td>@EndDate</td>
                                        <td>@item.Note</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script type="text/javascript">

    function isDelete() {
        var inputVal = $('input').val()
        var inputid = document.getElementById("idin").value;
        var result = confirm("Bạn có chắc chắn muốn xoá không ?");
        var url = '/Product/Delete/' + inputid;
        if (result) {
            window.location.href = url;
        }
    }

</script>




