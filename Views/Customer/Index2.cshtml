                                @{
                                    DateTime End = DateTime.Now;
                                    string TypeOfDebt = "Chưa xác định";

                                }
                                @foreach (var item in Model)
                                {
                                    string StartDate = item.StartDate.ToString("dd/MM/yy");
                                    if (Convert.ToInt32(@item.TypeOfDebt) == 1)
                                    {
                                        End = Convert.ToDateTime(@item.StartDate).AddMonths(6);
                                        TypeOfDebt = Convert.ToString("Nợ ngắn hạn");
                                    }
                                    else
                                    {
                                        End = Convert.ToDateTime(@item.StartDate).AddMonths(6);
                                        TypeOfDebt = Convert.ToString("Nợ dài hạn");
                                    }
                                    string EndDate = End.ToString("dd/MM/yy");
