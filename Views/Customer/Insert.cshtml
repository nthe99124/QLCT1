
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Thêm khách hàng</title>
    <link rel="icon" href="~/Content/Image/logo_vuha.ico">
</head>
<body>
    <div class="container content" id="content-layout">
        <form method="post" action="/Customer/Insert">
            <div class="title-header">
                <div class="title-grid">
                    <div class="title-flexi-truncate">
                        <div class="title-media">
                            <div class="title-media__figure">
                                <div>
                                    <div class="title-icon" style="background-color: #A094ED">
                                        <span>
                                            <img src="~/Content/CustomCSS/Image/contact_120.png" class="title-icon" alt="Contacts" title="Contacts">
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <nav>
                                    <ol class="title-ol">
                                        <li class="title-li">
                                            <span>Khách hàng</span>
                                        </li>
                                    </ol>
                                </nav>
                                <div class="title-grid">
                                    <div class="title-header__title">
                                        <div class="title-name">
                                            <div>
                                                <span>Thêm khách hàng</span>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="data-content row">
                <div class="col-md-9">
                    <div class="col-md-12">
                        <div class="general-infor margin-top-15">
                            <div class="col-md-12 infor-title">
                                Th&#244;ng tin cơ bản
                            </div>

                            <div class="col-md-12 infor-body" style="padding-top: 25px; padding-left: 100px">

                                <div class="form-group col-md-6 padding-top-10">
                                    <label class='col-md-4 control-label'>Tên khách hàng</label><div class='col-md-8'><input type="text" class="form-control" name="Name"></div>
                                </div>

                                <div class="form-group col-md-6 padding-top-10">
                                    <label class='col-md-4 control-label'>Số điện thoại</label><div class='col-md-8'><input type="text" class="form-control" name="Phone"></div>
                                </div>

                                <div class="form-group col-md-6 padding-top-10">
                                    <label class='col-md-4 control-label'>Địa chỉ</label><div class='col-md-8'><input type="text" class="form-control" name="Address"></div>
                                </div>
                                <div class="form-group col-md-6 padding-top-10">
                                    <label class='col-md-4 control-label'>Số nợ</label><div class='col-md-8'><input type="text" class="form-control" name="Debt"></div>
                                </div>
                                <div class="form-group col-md-6 padding-top-10">
                                    <label class='col-md-4 control-label'>Ngày bắt đầu nợ</label><div class='col-md-8'><input type="date" class="form-control" name="StartDate"></div>
                                </div>
                                <div class="form-group col-md-6 padding-top-10">
                                    <label class='col-md-4 control-label'>Ngày kết thúc nợ</label><div class='col-md-8'><input type="date" class="form-control" name="EndDate"></div>
                                </div>
                                <div class="form-group col-md-6 padding-top-10" id="nv">
                                    <label class='col-md-4 control-label'>Nhân viên</label>
                                    <div class='col-md-8'>
                                        <select name="IdStaff" class='select2custom form-control '>
                                            <option value='' selected='selected'></option>
                                            @foreach (var item in @ViewBag.IdStaff)
                                            {
                                                <option value="@item.Id"> @item.Name </option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 padding-top-10">
                                    <label class='col-md-4 control-label'>Mã số thuế</label><div class='col-md-8'><input type="text" class="form-control" name="TIN"></div>
                                </div>
                                <div class="form-group col-md-6 padding-top-10">
                                    <label class='col-md-4 control-label'>Số tài khoản</label><div class='col-md-8'><input type="text" class="form-control" name="BankNumber"></div>
                                </div>
                                <div class="form-group col-md-6 padding-top-10">
                                    <label class='col-md-4 control-label'>Tên ngân hàng</label><div class='col-md-8'><input type="text" class="form-control" name="BankName"></div>
                                </div>
                                <div class="form-group col-md-6 padding-top-10">
                                    <label class='col-md-4 control-label'>Địa chỉ ngân hàng</label><div class='col-md-8'><input type="text" class="form-control" name="BankAddress"></div>
                                </div>
                                <div class="form-group col-md-6 padding-top-10">
                                    <label class='col-md-4 control-label'>Loại nợ</label>
                                    <div class='col-md-8'>
                                        <select name="TypeOfDate" class='select2custom form-control '>
                                            <option value="1">Nợ ngắn hạn</option>
                                            <option value="2">Nợ dài hạn</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group col-md-12 padding-top-10">
                                    <label class='col-md-4 control-label'>Là khách hàng tiềm năng</label>
                                    <div class='col-md-4'><input type="radio" name="Status" value="1" checked> <label> Có</label></div>
                                    <div class='col-md-4'><input type="radio" name="Status" value="2"> <label> Không</label></div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 " style="padding-left: 200px">
                        <div class="margin-top-30">
                            <div class="col-md-3">
                            </div>
                            <div class="col-md-6 text-center">
                                <button type="submit" class="btn btn-success">
                                    Thêm khách hàng
                                </button>
                                <a href="~/Customer/Index1" class="btn grey-salt gray" type="button">
                                    <i></i> Hủy
                                </a>
                            </div>
                            <div class="col-md-3">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>